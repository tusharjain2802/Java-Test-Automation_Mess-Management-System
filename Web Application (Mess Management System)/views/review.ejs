<body>
    <nav class="navbar">
        <h1 class="logo">Mess Management System</h1>
        <ul class="nav-links">
            <li><a href="" id="home">Home</li></a>
            <li><a href="/menu" id="menu">Mess Menu</li></a>
            <li class="active"><a href="/review" id="review">Review Us!</li></a>
            <li><a href="/change">Request a change</li></a>
            <li class="ctn"><a href="/logout">Logout</li></a>
        </ul>
        <img src="/imgs/menu-btn.png" alt="" class="menu-btn">
    </nav>

<div class="container">
    <h2 style="margin-bottom:50px ;" class="h1-responsive font-weight-bold text-center my-4">Give us your Feedback for today's meal!</h2>
    <div class="post">
      <div class="text">Thanks for rating us!</div>
      <div class="edit">EDIT</div>
    </div>
    <div class="star-widget">
      <form action="/review"  method="post">
      <input type="radio" name="rate5" id="rate-5">
      <label for="rate-5" class="fas fa-star"></label>
      <input type="radio" name="rate4" id="rate-4">
      <label for="rate-4" class="fas fa-star"></label>
      <input type="radio" name="rate3" id="rate-3">
      <label for="rate-3" class="fas fa-star"></label>
      <input type="radio" name="rate2" id="rate-2">
      <label for="rate-2" class="fas fa-star"></label>
      <input type="radio" name="rate1" id="rate-1">
      <label for="rate-1" class="fas fa-star"></label>

      <div class="container-form">
        <select name="meal" class="custom-select" style="margin-bottom:25px ;" required require>
          <option>Select Meal: </option>
          <option>Breakfast</option>
          <option>Lunch</option>
          <option>Dinner</option>
      </select>

        <div style="height: 20%; margin-bottom: 15px; display: none" >
          <input id="temp" name="postName" value="">  
        </div>
        
        <div class="textarea">
          <textarea name="postBody" cols="30" placeholder="Describe your experience.." required require></textarea>
        </div>
        <div class="btn">
          <button type="submit">Post</button>
        </div>
      </div>
      </form>
    </div>
  </div>
  <section class="mb-4">

    <div style="margin:30px auto 80px auto;" class="line"></div>

    <h2 class="h1-responsive font-weight-bold text-center my-4">Get you Issues Resolved!</h2>
    <p class="text-center w-responsive mx-auto mb-5">Do you have any questions? Do not hesitate to contact us directly. Our team will come back to you within
        a matter of hours to help you.</p>

    <div class="row">

        <div class="col-md-9 mb-md-0 mb-5">
            <form id="contact-form" name="contact-form" action="/issue" method="POST">
              <div class="row">
                <div class="col-md-12">
                  <div class="md-form mb-0">
                      <input style="display:none ;" type="text" id="name" name="name" class="form-control" value="" required require>
                  </div>
              </div>
              </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-0">
                            <label for="email" class="">Your email</label>
                            <input type="text" id="email" name="email" class="form-control" required require>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-0">
                            <label for="subject" class="">Subject</label>
                            <input type="text" id="subject" name="subject" class="form-control" required require>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">

                        <div class="md-form">
                            <label for="message">Brief the Issue :</label>
                            <textarea type="text" id="message" name="message" rows="2" class="form-control md-textarea" required require></textarea>
                        </div>

                    </div>
                </div>
                <!--Grid row-->
                <button class="btn btn-primary btn-outline-warning " onclick="document.getElementById('contact-form').submit();">Send</button>
            </form>
            
            <div class="status"></div>
        </div>

        <div class="col-md-3 text-center">
            <ul class="list-unstyled mb-0">
                <li><i class="fas fa-map-marker-alt fa-2x"></i>
                    <p>Thapar University, Patiala, Punjab, Pin -147004, India</p>
                </li>

                <li><i class="fas fa-phone mt-4 fa-2x"></i>
                    <p>+91 9999-9-9999</p>
                </li>

                <li><i class="fas fa-envelope mt-4 fa-2x"></i>
                    <p>mess.management@thapar.edu</p>
                </li>
            </ul>
        </div>
    </div>

</section>
  <style>
    @import url('https://fonts.googleapis.com/css?family=Poppins:400,500,600,700&display=swap');
*{
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: 'Poppins', sans-serif;
}

.container{
  position: relative;
  width: 400px;
  padding: 20px 30px;
  margin: 20% auto;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  margin:150px auto 150px auto;
}
.container .post{
  display: none;
}
.container .text{
  font-size: 25px;
  color: #666;
  font-weight: 500;
}
.container .edit{
  position: absolute;
  right: 10px;
  top: 5px;
  font-size: 16px;
  color: #666;
  font-weight: 500;
  cursor: pointer;
}
.container .edit:hover{
  text-decoration: underline;
}
.container .star-widget input{
  display: none;
}
.star-widget label{
  font-size: 40px;
  color: #444;
  padding: 10px;
  float: right;
  transition: all 0.2s ease;
}
input:not(:checked) ~ label:hover,
input:not(:checked) ~ label:hover ~ label{
  color: #fd4;
}
input:checked ~ label{
  color: #fd4;
}
input#rate-5:checked ~ label{
  color: #fe7;
  text-shadow: 0 0 20px #952;
}

.container-form{
  display: none;
}
input:checked ~ .container-form{
  display: block;
}
.container-form header{
  width: 100%;
  font-size: 25px;
  color: #fe7;
  font-weight: 500;
  margin: 5px 0 20px 0;
  text-align: center;
  transition: all 0.2s ease;
}
form .textarea{
  height: 100px;
  width: 100%;
  overflow: hidden;
}
.entername{
  color: #eee;
  border: 1px solid #333;
  background: #222;
}
form .textarea textarea{
  height: 100%;
  width: 100%;
  outline: none;
  color: #eee;
  border: 1px solid #333;
  background: #222;
  padding: 10px;
  font-size: 17px;
  resize: none;
}
.textarea textarea:focus{
  border-color: #444;
}
form .btn{
  height: 45px;
  width: 100%;
  margin: 15px 0;
}
form .btn button{
  height: 100%;
  width: 100%;
  border: 1px solid #444;
  outline: none;
  background: #222;
  color: #999;
  font-size: 17px;
  font-weight: 500;
  text-transform: uppercase;
  cursor: pointer;
  transition: all 0.3s ease;
}
form .btn button:hover{
  background: #1b1b1b;
}
</style>

<script>
  const item = JSON.parse(localStorage.getItem('token'));
  document.getElementById("home").href='home/'+JSON.stringify({name:item.name,hostel:item.hostel});
  const itemname = JSON.parse(localStorage.getItem('token'));
  document.getElementById('temp').setAttribute('value',itemname.name);
  document.getElementById('name').setAttribute('value',itemname.name);


  $(document).ready(function() {
        $("input[type=radio]").prop("checked", false);
     

        $("input[type=radio]").click(function(event) {
          $("input[type=radio]").prop("checked", false);
          $(this).prop("checked", true);

        });
      });
</script>
