    <div style="margin:100px ;"></div>
    

    
<div style="margin:30px ;"></div>
<div class="container">
<br>
<i class="fa-solid fa-comment-dots fa-5x"> <h4 class="feedbackHead">Feedbacks</h4></i>
<% allPosts.forEach(function(post){ %>
    <h6>On <%= post.dayToday %>,</h6>
    <h5><%= post.postName %> posted for <%= post.postTitle %>:</h5> <h3><%= post.rated %> ‚≠ê</h3> 
    <p><%= post.postBody %></p>
    <hr class="lineHoriz">
<% }) %>
</div>
<div class="line"></div>

<div style="margin:30px ;"></div>
<div class="container">
    <br>
    <i class="fa-solid fa-triangle-exclamation fa-5x"><h4 class="feedbackHead">Issues</h4> </i>
    <% issues.forEach(function(issue){ %>
        <%  %>
        <h5><%= issue.subject %></h5>
        <h6>By, <%= issue.name %> (<a href=mailto:<%= issue.email %>><%= issue.email %></a>)</h6>
        <p><%= issue.message %></p>
        <hr class="lineHoriz">
    <% }) %>
</div>

<style>
    .lineHoriz{ 
        width: 10%;
        border-style: none;
        border-top: 5px dotted grey;
        margin: 50px auto;
    }
    .head, h5{
        color:#B93160;
    }
    h5, h6, h3{
        text-align: center;
    }
    .feedbackHead{
        color:#EED180 ;
    }
    p{
        text-align: center;
    }

</style>
