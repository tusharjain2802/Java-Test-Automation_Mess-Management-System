    <div class="container">
    <div class="col-lg-7 mb-5 mb-lg-0">
        <h2 style="color:#EED180; margin-top: 8rem;" class="mb-5">Give/Update 5 alternative dishes<br> for students to choose from</h2>

        <form  method="post" action="/options" >
          <div class="row">
            <div class="col-md-12 form-group">
              <label style="color:#B93160;" for="op1" >Option 1:</label>
              <input type="text" class="form-control" name="op1" id="op1"  value="<%= options[0].Dish %>">
            </div>
          </div>
          <div class="row">
            <div class="col-md-12 form-group">
                <label style="color:#B93160;" for="op2" >Option 2:</label>
                <input type="text" class="form-control" name="op2" id="op2"  value="<%- options[1].Dish %>">
            </div>
          </div>
          <div class="row">
            <div class="col-md-12 form-group">
                <label style="color:#B93160;" for="op3" >Option 3:</label>
                <input type="text" class="form-control" name="op3" id="op3"  value="<%- options[2].Dish %>">
            </div>
          </div>
          <div class="row">
            <div class="col-md-12 form-group">
                <label style="color:#B93160;" for="op4" >Option 4:</label>
                <input type="text" class="form-control" name="op4" id="op4"  value="<%= options[3].Dish %>">
            </div>
          </div>
          <div class="row">
            <div class="col-md-12 form-group">
                <label style="color:#B93160;" for="op5" >Option 5:</label>
                <input type="text" class="form-control" name="op5" id="op5"  value="<%= options[4].Dish %>"">
            </div>
          </div>
          <div style="margin-bottom: 2.5rem;" class="row">
            <div class="col-md-12">
              <input type="submit" value="Submit" class="btn btn-primary btn-warning rounded-0 py-2 px-4">
              <span class="submitting"></span>
            </div>
          </div>
        </form>
      </div>
    </div>
